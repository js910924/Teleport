@model SignUpViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "_Layout";
}

<form asp-controller="Account" asp-action="SignUp" method="post">
    <div class="form-group">
        <label for="Account">Account</label>
        <input class="form-control" type="text" id="Account" name="Account" value="@Model.Account" required="" />
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <small class="form-text text-danger">@Model.ErrorMessage</small>
        }
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input class="form-control" type="text" id="Password" name="Password" value="@Model.Password" required="" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    document.getElementById('Account').focus();
</script>